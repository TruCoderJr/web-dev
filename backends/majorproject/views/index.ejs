<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>FeelLikeHome</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        /* background-color: #f8f9fa; */
        background-color: #f8f9fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        color: #343a40;
        margin: 0;
        padding: 0;
        height: 100%;
        padding-top: 70px;
      }

      .container {
        margin-top: 40px;
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
        justify-content: center;
      }
      /* .container-fluid{
        display: flex;

      } */

      .img-container {
        width: 18rem;
        box-shadow: 0 4px 10px rgb(0 0 0 / 0.1);
        border-radius: 10px;
        background: #fff;
        transition: transform 0.2s ease-in-out;
      }

      .img-container:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 20px rgb(0 0 0 / 0.15);
      }

      .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        height: 180px;
        object-fit: cover;
      }

      .card-body {
        padding: 1rem 1.25rem;
        text-align: center;
      }

      .card-title {
        font-weight: 600;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: #343a40;
      }

      .card-text {
        color: #6c757d;
        font-size: 1rem;
      }
      .nav-item {
        font-size: 1.25rem;
        margin-left: 1rem;
        /* margin-right: 5%; */
      }

      .navbar-nav {
        align-items: center;
      }
      nav {
        box-shadow: 0 0 2px 0px gray;
        z-index: 1030; /* ensure navbar stays on top */
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="/H.png" alt="FeelLikeHome" width="40" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <!-- push menu to right -->
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="http://localhost:3000/listings">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="http://localhost:3000/listings">All Listings</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/listings/new">Add Your Home</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% for (const ele of allListings) { %>
      <div class="img-container card">
        <a href="/listings/<%= ele._id %>">
          <img
            src="<%= ele.image.url %>"
            class="card-img-top"
            alt="<%= ele.image.filename %>"
          />
        </a>

        <div class="card-body">
          <h5 class="card-title"><%= ele.title %></h5>
          <p class="card-text">&#x20B9;<%= ele.price %>/night</p>
        </div>
      </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
