<% layout( "/layouts/biolerplate") %> 

<div class="container">
  <%- include('../includes/flash') %>
  <h3>All Listings</h3>
  <div
    class="indexContainer row row-cols-lg-3 row-cols-md-2 row-cols-sm-1justify-content-center"
  >
    <% for (const ele of allListings) { %>
    <a href="/listings/<%= ele._id %>" class="listing-link">
      <div class="card col">
        <img
          src="<%= ele.image.url %>"
          class="card-img-top"
          style="height: 18rem"
          alt="<%= ele.image.filename %>"
        />
        <div class="card-img-overlay"></div>

        <div class="card-body">
          <h5 class="card-title"><%= ele.title %></h5>

          <% if (ele.price != undefined) { %>
          <p class="card-text">
            &#x20B9;<%= ele.price.toLocaleString("en-IN") %>/night
          </p>

          <% } %>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>
